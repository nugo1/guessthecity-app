<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.montecode.pmcg.kvizoprirodi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="me.montecode.pmcg.kvizoprirodi.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        tools:replace="android:icon"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version" />
        <activity
            android:name="me.montecode.pmcg.kvizoprirodi.StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.montecode.pmcg.kvizoprirodi.MainQuizActivity"
            android:label="@string/title_activity_main_quiz"
            android:parentActivityName="me.montecode.pmcg.kvizoprirodi.StartActivity"
            android:screenOrientation="sensorPortrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.montecode.pmcg.kvizoprirodi.StartActivity" />
        </activity>
        <activity
            android:name="me.montecode.pmcg.kvizoprirodi.HighScoreActivity"
            android:label="@string/title_activity_high_score"
            android:parentActivityName="me.montecode.pmcg.kvizoprirodi.StartActivity"
            android:screenOrientation="sensorPortrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.montecode.pmcg.kvizoprirodi.StartActivity" />
        </activity>
        <activity
            android:name="me.montecode.pmcg.kvizoprirodi.AboutProjectActivity"
            android:label="@string/title_activity_about_project"
            android:parentActivityName="me.montecode.pmcg.kvizoprirodi.StartActivity"
            android:screenOrientation="sensorPortrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.montecode.pmcg.kvizoprirodi.StartActivity" />
        </activity>

        <activity android:name="com.google.android.gms.ads.AdActivity"
                  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
                  android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>
